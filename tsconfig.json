{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "charset": "uft8",
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "Superfine.h",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "noEmitHelpers": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noResolve": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    "samples/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}