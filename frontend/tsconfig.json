{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "charset": "uft8",
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "es6"],
    "module": "es6",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "paths": {
    "src": ["src/"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
